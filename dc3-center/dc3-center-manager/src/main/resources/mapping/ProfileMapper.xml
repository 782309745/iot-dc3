<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.pnoker.center.manager.mapper.ProfileMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="io.github.pnoker.center.manager.entity.model.ProfileDO">
        <id column="id" property="id"/>
        <result column="profile_name" property="profileName"/>
        <result column="profile_code" property="profileCode"/>
        <result column="profile_share_flag" property="profileShareFlag"/>
        <result column="profile_type_flag" property="profileTypeFlag"/>
        <result column="group_id" property="groupId"/>
        <result column="enable_flag" property="enableFlag"/>
        <result column="tenant_id" property="tenantId"/>
        <result column="remark" property="remark"/>
        <result column="creator_id" property="creatorId"/>
        <result column="creator_name" property="creatorName"/>
        <result column="create_time" property="createTime"/>
        <result column="operator_id" property="operatorId"/>
        <result column="operator_name" property="operatorName"/>
        <result column="operate_time" property="operateTime"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , profile_name, profile_code, profile_share_flag, profile_type_flag, group_id, enable_flag, tenant_id, remark, creator_id, creator_name, create_time, operator_id, operator_name, operate_time, deleted
    </sql>

    <select id="selectPageWithDevice" resultType="io.github.pnoker.center.manager.entity.model.ProfileDO">
        select dp.id,
        dp.profile_name,
        dp.profile_code,
        dp.profile_share_flag,
        dp.profile_type_flag,
        dp.group_id,
        dp.enable_flag,
        dp.tenant_id,
        dp.remark,
        dp.creator_id,
        dp.creator_name,
        dp.create_time,
        dp.operator_id,
        dp.operator_name,
        dp.operate_time,
        dp.deleted
        from dc3_profile dp
        <if test="deviceId != null and deviceId != ''">
            inner join dc3_profile_bind dpb on dp.id = dpb.profile_id
            inner join dc3_device dd on dpb.device_id = dd.id and dd.id = #{deviceId}
        </if>
        ${ew.customSqlSegment}
    </select>
</mapper>
